# Flask配置
FLASK_ENV=development
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# 文件上传配置
UPLOAD_FOLDER=uploads
AUDIO_FOLDER=audio
SUBTITLE_FOLDER=subtitles
MAX_FILE_SIZE=500MB

# Whisper配置
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto
WHISPER_DEVICE=auto

# 数据库配置
DATABASE_URL=sqlite:///video_subtitle.db

# Redis配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 处理配置
MAX_WORKERS=4
PROCESS_TIMEOUT=3600

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log